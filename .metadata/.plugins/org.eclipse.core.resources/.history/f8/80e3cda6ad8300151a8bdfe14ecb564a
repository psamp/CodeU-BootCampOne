package com.jits.report;
import java.util.ArrayList;
import java.util.Collections;

import com.jits.library.ShippingTypeComparator;
import com.jits.shipping.JitsException;
import com.jits.shipping.Parcel;
import com.jits.shipping.Warehouse;

public class Report {
	
	static String getParcels(ArrayList<Parcel> pkg){
		String report = "";
		Collections.sort(pkg, new ShippingTypeComparator());
		
		for (Parcel parcel : pkg) {
			report += parcel.toString() + "\n";
			System.out.println(parcel.toString());
		}
		return report;
	}
	
	public static void main(String[] args) throws JitsException {
		
		Warehouse w = new Warehouse();
		ArrayList<Parcel> pkg = new ArrayList<Parcel>();
		
		Parcel e = new Parcel();
		e.setId("74367834562390");
		e.setShippingType("RAL");
		
		Parcel a = new Parcel();
		a.setId("68342443562390");
		a.setShippingType("RAL");
		
		Parcel f = new Parcel();
		f.setId("567768979786584589");
		f.setShippingType("RAL");
		
		Parcel b = new Parcel();
		b.setId("32554867655346");
		b.setShippingType("AIR");
		
		Parcel g = new Parcel();
		g.setId("1895477878754");
		g.setShippingType("AIR");
		
		Parcel c = new Parcel();
		c.setId("246548445454549783");
		c.setShippingType("GRD");
		
		Parcel d = new Parcel();
		d.setId("9898234546452354");
		d.setShippingType("GRD");
		
		pkg.add(f);
		pkg.add(a);
		pkg.add(c);
		pkg.add(e);
		pkg.add(b);
		pkg.add(d);
		pkg.add(g);
		
		Report.getParcels(pkg);
	}

}
