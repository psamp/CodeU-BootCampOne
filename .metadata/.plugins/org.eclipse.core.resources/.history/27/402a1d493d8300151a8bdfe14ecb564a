package com.jits.shipping;

public class Validator {
	
	boolean checkZipCodes(String zip) throws JitsException {
		
		boolean check = false;
		
		if(zip.length() == 5 & zip.matches("[0-9]+")) {
			check = true;
		} else {
			throw new JitsException("Zipcode must be 5 digits.", new IllegalArgumentException());
		}
		
		return check;
	}

}
