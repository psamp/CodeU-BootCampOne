package com.jits.routing;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

public class Chalkboard {

	@Before
	public void setUp() throws Exception {
	}

	@Test
	public void test() {
		String concatDestinationInfo = "12 Main St." + "12345";
		String removeAllWhiteSpace = concatDestinationInfo.replaceAll("\\s+", "");
		String[] array = removeAllWhiteSpace.split("(?!^)");
		
		int sum = 0;
		
		System.out.println(removeAllWhiteSpace);
		System.out.println();
		for (int i = 0; i < array.length; i++) {
			char character = array[i].charAt(0);	
			
			sum += (int) character;
		}
		
		System.out.println(sum);
	}

}
