package com.jits.shipping;

import com.jits.shipping.JitsException;

public class Validator {
	
	static boolean checkNumericalString(String str, int length) throws JitsException {
		
		boolean check = false;
		
		if( (str != null ) & (str.length() == length) & (str.matches("[0-9]+")) ) {
			check = true;
		} else {
			throw new JitsException("String must be " + length + " digits.", new IllegalArgumentException());
		}
		
		return check;
	}
	
	static int getInt(String num) {
		Double dbl = Math.ceil(Double.parseDouble(num));
		return dbl.intValue();
	}

}
