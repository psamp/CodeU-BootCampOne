package com.jits.shipping;

public class Validator {
	
	boolean checkZipCodes(String str, int length) throws JitsException {
		
		boolean check = false;
		
		if( (str != null ) & (str.length() == length) & (str.matches("[0-9]+")) ) {
			check = true;
		} else {
			throw new JitsException("String must be " + length + " digits.", new IllegalArgumentException());
		}
		
		return check;
	}

}
